@import '../assembly/selectInput/selectInput.wxss';

@import '../assembly/attrPlug/attrPlug.wxss';

@import '../manager/roomRedpacks/roomRedpacks.wxss';
.battleHome{
  width:100%;
  height:90vh;
  background:white;
  padding-top:40px;
}

.battleHomeTool{
  text-align:right;
  padding-top:10px;
  padding-bottom:10px;
  padding-right:20px;
  color:green;
}

.battleHomeToolItem{
  display:inline-block;
  width:25%;
  text-align: center;
}

.battleHomeHeader{
  padding-top:10px;
  padding-bottom:10px;
  width:100%;
  background:white;
  margin-top:5px;
}

.battleHomeHeaderImg{
  width:50px;
  height:50px;
  display:inline-block;
  left:10px;
  border-radius:10px;
  position: relative;
}

.battleHomeHeaderSelect{
  display:inline-block;
  width:40%;
  background:white;
  color:green;
  vertical-align: top;
  text-align: center;
  padding-bottom:10px;
  padding-top:10px;
  left:20px;
  top:1px;
  position:relative;
  border-radius: 10px;
  padding-right:20px;
  border:2px solid RGBA(247,247,247,1);

  
}

.battleHomeHeaderSelectSpan1{
  display:inline-block;
  width:80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.battleHomeHeaderStart{
  display:block;
  position:relative;
  background: RGBA(245,173,56,1);
  border-radius:10px;
  color:white;
  float: right;
  padding-left:10px;
  padding-right:10px;
  padding-top:5px;
  padding-bottom:5px;
  right:10px;
  top:10px;
}

.battleHomeContentItem{
  background:white;
  width:100%;
  border-bottom:2px solid RGBA(247,247,247,1);
  position: relative;
  text-align: left;
  padding-bottom:10px;

  margin-top:20px;
}

.battleHomeContentItemImage{
  width:40%;
  height:90px;
  position: relative;
  margin: 0 auto;
  display:inline-block;
  border-radius:10px;
  left:20px;
}

.battleHomeContentItemSmallImage{
  position: absolute;
  top:40px;
  left:30px;
  width:30px;
  height:30px;
  z-index:100;
  border-radius:10px;
}

.battleHomeContentItemPersonal{
  display:inline-block;
  vertical-align: top;
  padding-left:10px;
  padding-top:5px;
  width:45%;
  text-align: left;
}

.battleHomeContentItemPersonalName{
  color:red;
  position: absolute;
  border-radius:5px;
  top:10px;
  left:50%;
}

.battleHomeContentItemPersonalInstruction{
  font-size:10px;
  width:90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  
}

.battleHomeContentItemFooter{
  display:block;
  font-size:12px;
  left:50%;
  top:40px;
  position: absolute;
  color: black;
}

.battleHomeContentMyself{
  background:white;
  margin: 5px;
  padding-top:10px;
  padding-bottom:10px;

  border:2px solid RGBA(247,247,247,1);
}

.battleHomeContentMyselfIcon{
  display:inline-block;
  color:green;
  position: relative;
  padding-left:10px;
  font-size:20px;
}

.battleHomeContentMyselfName{
  display:inline-block;
  position: relative;
  padding-left:50px;
}


.battleHomeContentMyselfIcon2{
  float: right;
  right:10px;
  position: relative;
}


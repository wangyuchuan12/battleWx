@import '../assembly/attrPlug/attrPlug.wxss';
@import '../battleHome/battleHome.wxss';
.battleHomeHeader{
  height: 10vh;
}

.battleHomeHeaderContent{
  width:50%;
  height:100%;
  display: inline-block;
  position: relative;
  left:20px;
  vertical-align: top;
  color: white;
}

.battleHomeProgress{
  width:100px;
  display: inline-block;
  position: relative;
  left:10px;
}

.battleHomeHeaderContentItem1{
  vertical-align: top;
}

.danList{
  background: rgba(49,64,93,1);
  width:100%;
  height:100vh;

  padding-top:50px;

  position: fixed;
  
}

.danListContent{
  height: 55vh;
  position: fixed;
}
.danItem{
  width:90%;
  height:150px;
  position: relative;
  margin: 0 auto;
  border-radius:10px;
  background: RGBA(37,75,140,1);
  margin-bottom:10px;
}

.danItemName{
  color: white;
  padding-left:20px;
  padding-top:20px;
  position: relative;
  font-size:20px;
  font-weight: bolder;
}

.danItemImg{
  width:100px;
  height:100px;
  position: absolute;
  right: 20px;
  top:20px;
}